.alert {
  @apply relative py-6 px-4 rounded border-l-8 flex items-center;

  &-error {
    @apply text-red-300 bg-red-100 border-red-200;
  }

  &-warning {
    @apply text-orange-300 bg-orange-100 border-orange-200;
  }

  &-success {
    @apply text-green-300 bg-green-100 border-green-200;
  }

  &-info {
    @apply text-blue-600 bg-blue-100 border-blue-400;
  }
}
